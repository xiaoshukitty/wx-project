page {
  width: 100vw;
  font-size: 24rpx;
  color: #0d0d0d;
  /* background: #f5f5f5; */
  font-family: PingFang-SC-Medium;
}

/* 全局去掉 scroll-view 滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0 !important;
  height: 0 !important;
  -webkit-appearance: none;
  background: transparent;
}

.scroll-view::-webkit-scrollbar {
  display: none;
  width: 0 !important;
  height: 0 !important;
  -webkit-appearance: none;
  background: transparent;
}