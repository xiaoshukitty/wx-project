.order_list {
  padding: 20rpx 30rpx;
}

.order_item {
  /* height: 320rpx; */
  margin-bottom: 20rpx;
  border-radius: 20rpx;
}

.itemContent {
  width: 100%;
  height: 350rpx;
  padding: 20rpx;
  background-color: #fff;
}

.itemLeft {
  width: 100%;
  height: 320rpx;
  background-color: yellow;
}

.itemRight {
  width: 100%;
  height: 390rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 390rpx;
  color: #fff;
  background-color: #FF8C00;
  border-radius: 0 20rpx 20rpx 0;
}

.order_address {
  display: flex;
  align-items: center;
  height: 40rpx;
}

.order_address image {
  width: 24rpx;
  height: 24rpx;
  vertical-align: bottom;
}

.order_img {
  margin: 20rpx 0;
  /* height: 120rpx; */
}

.order_img image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.order_info {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
  color: #A9A9A9;
}

.order_success_moeny {
  margin-left: 8rpx;
  font-size: 30rpx;
  color: #000;
}

.order_again {
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx;

}

.order_again view {
  width: 140rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border: 1rpx solid #FF8C00;
  border-radius: 10rpx;
  color: #FF8C00;
}

.food_info {
  display: flex;
  white-space: nowrap;
  /* height: 120rpx; */
}

.food_item{
  width: 120rpx;
  /* height: 120rpx; */
  margin-left: 20rpx;
}