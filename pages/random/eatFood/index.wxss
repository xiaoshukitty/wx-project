.turntable {
    display: block;
    width: 100%;
    height: 600rpx;
    position: relative;
    margin-top: 40rpx;
    overflow: hidden;
  }
  
  .turntable::before {
    position: absolute;
    bottom: -50rpx;
    left: 50%;
    transform: translateX(-50%);
    content: '';
    width: 450rpx;
    height: 80rpx;
    background-color: rgb(114, 114, 114);
    opacity: 0.4;
    border-radius: 50% / 50%;
  }
  
  .turntable .wrapper {
    position: relative;
    transform-origin: center;
    width: 100%;
    height: 600rpx;
  }
  
  .turntable .wrapper .item {
    position: absolute;
    left: 50%;
    width: 300rpx;
    height: 600rpx;
    border-radius: 0px 300rpx 300rpx 0;
    overflow: hidden;
    transform-origin: left center;
  }
  
