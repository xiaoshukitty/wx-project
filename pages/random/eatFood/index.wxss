  .turntable .wrapper .item .item-inner {
    text-align: center;
    width: 300rpx;
    height: 600rpx;
    /* transform: translateX(-300rpx) rotate(60deg); */
    transform-origin: right center;
    border-radius: 300rpx 0 0 300rpx;
    font-size: 32rpx;
  }
  
  .turntable .wrapper .item:nth-child(3n-2) .item-inner {
    /* background: #F0F2F5; */
    background: #ff0000;
  
    color: black;
  }
  
  .turntable .wrapper .item:nth-child(3n-1) .item-inner {
    background: #80bfe0;
    color: #ffffff;
  }
  .turntable .wrapper .item:nth-child(3n) .item-inner {
    background: #80e0a0;
    color: #ffffff;
  }
  
  .turntable .wrapper .item .item-inner text {
    display: block;
    transform-origin: center;
  }
  
  .turntable .point {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    background-color: #1c92d2;
    width: 120rpx;
    height: 120rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    z-index: 1;
    color: white;
    font-weight: 900;
  }
  
  .turntable .point view {
    text-align: center;
  }
  
  .turntable .point::after {
    content: '';
    left: 50%;
    top: -6px;
    transform: translateX(-50%);
    position: absolute;
    border-width: 0 6px 6px;
    border-style: solid;
    border-color: transparent;
    border-bottom-color: #1c92d2;
    transform-origin: center;
  }
  
  .btn {
    margin-top: 60rpx;
    text-align: center;
    padding: 20rpx;
  }
  
  .btn>button {
    width: 300rpx !important;
  }
  
  .result {
    height: 100rpx;
    font-size: 50rpx;
  }
  
  .controls {
    display: flex;
    margin-top: 40rpx;
  }
  
  .controls button {
    width: 300rpx !important;
  }