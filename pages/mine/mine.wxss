.mine {
    padding: 200rpx 40rpx 0;
    background-image: linear-gradient(to bottom, #FF8C00, #fff);
    height: 100vh;
}

.user {
    display: flex;
    align-items: center;
    margin-bottom: 40rpx;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    margin-right: 30rpx;
    border-radius: 50%;
    border: 1rpx solid #FF8C00;
}

.nickname {
    font-size: 28rpx;
    font-weight: 800;
}

.avatar image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.mb40 {
    margin-bottom: 40rpx;
    background-color: yellowgreen;
}

.line {
    margin-top: 200rpx;
}