.container {
  width: 750rpx;
  padding-bottom: 180rpx;
}


.banner {
  padding: 20rpx;
  border-radius: 10rpx;
}

.banner-item {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
}

.banner-item image {
  border-radius: 10rpx;
}

.swiper-item {
  width: 750rpx;
  height: 700rpx;
}

.center {
  position: absolute;
  top: 650rpx;
  left: 25rpx;
  width: 700rpx;
  height: 640rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.center_list {
  padding: 30rpx;
  display: flex;
  flex-flow: wrap;
}

.center_item {
  position: relative;
  width: 50%;
  height: 290rpx;
}

.center_item:nth-child(1),
.center_item:nth-child(2) {
  border-bottom: 1rpx solid #eee;
}

.center_order {
  padding: 20rpx;
  height: 250rpx;
}

.center_item_border::before {
  display: block;
  content: '';
  width: 1rpx;
  height: 210rpx;
  position: absolute;
  top: 40rpx;
  background-color: #eee;
}

.center_order {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.center_order image {
  width: 100rpx;
  height: 100rpx;
  margin-top: 20rpx;
}

.center_order_name {
  margin: 15rpx 0 7rpx 0;
  font-size: 32rpx;
  color: #000;
}

.center_order_introduce {
  font-size: 22rpx;
  color: silver;
}
